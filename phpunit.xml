<phpunit bootstrap="./vendor/autoload.php" colors="true">
    <testsuites>
        <testsuite name="JSONRPC2ClientSecure">
            <directory>./tests/PHP</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="junit" target="tests/results/unit.xml" logIncompleteSkipped="false" charset="UTF-8"/>
        <log type="coverage-clover" target="tests/results/clover.xml"/>
        <log type="coverage-html" target="tests/results/clover" charset="UTF-8" yui="true" highlight="false" />
    </logging>
</phpunit>
